@model List<CheeseMVC.Models.CheeseCategory>
	<h1>@ViewBag.Title</h1>
	<h2>Categories</h2>
	<p><a asp-controller="Category" asp-action="Add">Create Category</a></p>

	@if (Model.Count == 0)
{
	<p>No categories yet!</p>
}
else
{
	<ul>
		@foreach (var category in Model)
        {
		<li>@category.Name</li>
        }
	</ul>
}

	<p><a asp-controller="Category" asp-action="Add">Add Category</a></p>
